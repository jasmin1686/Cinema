@using Cinema.ViewModels
@model MovieCreateVM

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Create new Movie</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input class="form-control" name="Name">
                </div>
                <div class="mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input type="number" class="form-control" name="Price">
                </div>
               
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a description here" name="Description" style="height: 100px"></textarea>
                        <label for="description">You Description Here...</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select name="Status" class="form-select">
                        <option value="true" selected>Active</option>
                        <option value="false">InActive</option>
                    </select>
                </div>
                    <div class="mb-3">
                    <label for="CategoryId" class="form-label">Category</label>
                        <select name="CategoryId" class="form-select">
                        @foreach (var item in Model.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                        </select>
                    </div>
                <div class="mb-3">
                    <label for="CinemaId" class="form-label">Cinema</label>
                    <select name="CinemaId" class="form-select">
                        @foreach (var item in Model.Cinemaas)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
               
                <div class="mb-3">
                    <label for="MainImg" class="form-label">img</label>
                    <input type="file" class="form-control" name="MainImg" accept="*.png ">
                </div>
                <div class="mb-3">
                    <label for="Subimgs" class="form-label">Sub imgs</label>
                    <input type="file" class="form-control" name="Subimgs" multiple accept="*.png ">
                </div>

                
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>